FROM node:18-alpine

WORKDIR /app

# Copy everything
COPY . .

# Install dependencies
RUN npm install --legacy-peer-deps

# Build everything
RUN npm run build:core
RUN npm run build:parsers
RUN npm run build:api
RUN npm run build:web

# Expose port
EXPOSE 3000 3001

# Start both services
CMD ["sh", "-c", "cd apps/api && npm run start:prod & cd apps/web && npm run start & wait"]